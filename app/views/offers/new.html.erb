<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path "nid-cigognes_lyxjc7"%>);">
  <div class="container">
    <h1>Woof & Roof</h1>
    <p>Plus qu'un logement, une expérience.</p>
    <%= link_to "Proposer un logement", new_offer_path, class: "btn btn-ghost" %>
  </div>
</div>

<div class="container mt-5 mb-10">
  <h1 class = "text-center mb-2" >Créer votre annonce</h1>
  <div class="row">
    <div class="col-6 mb-2">
    <%= simple_form_for(@offer) do |f| %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :address %>
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>
      <div class="text-end mt-4">
        <%= f.button :submit, class: "button_general" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
