<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(<%= image_path "nid-cigognes"%>);">
  <div class="container">
    <h1>Woof & Roof</h1>
    <p>Plus d'un logement, une exp√©rience.</p>
    <%= link_to "Proposer un logement", new_offer_path, class: "btn btn-ghost" %>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @offers.each do |offer| %>
      <div class="col-4">
        <div class="card-trip">
          <%= link_to offers_path do %>
            <div
              class="card-trip-image"
              style="background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)),
              <%= offer.photo.attached? ? cl_image_path(offer.photo.key) : image_path("pngtree-a-otter-on-tire-with-green-background-png-image_13046574.png") %>)">
            </div>
            <div class="card-trip-infos">
              <div class="card-trip-details">
                <h2><%= offer.title %></h2>
                <p><%= offer.description %></p>
              </div>
              <h2 class="card-trip-pricing"><%= offer.price %></h2>
              <img
                src="https://kitt.lewagon.com/placeholder/users/krokrob"
                class="card-trip-user avatar-bordered" />
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
