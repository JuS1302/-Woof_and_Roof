<!--Nav-bar-->
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon pt-0">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
    <img src="https://www.1min30.com/wp-content/uploads/2018/02/Couleur-logo-Airbnb.jpg" alt="Airbnb Logo" />
  <% end %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

          <div class=search-bar>
            <%= form_with url: "/search", method: :get do |form| %>
             <%= form.label :query, "Destination:" %>
             <%= form.search_field :query, class: "search-bar destination", placeholder:"Rechercher une destination"%>
             <%= form.label :query, "Arrivee:" %>
             <%= form.search_field :query, class: "search-bar quand", placeholder:"Quand?" %>
             <%= form.label :query, "Depart:" %>
             <%= form.search_field :query, class: "search-bar quand", placeholder: "Quand?"  %>
             <%= form.label :query, "Voyageurs:"%>
             <%= form.search_field :query, class: "search-bar voyageur", placeholder: "Rajouter des voyageurs"%>
             <%= form.submit "Search" , class: "btn bg_color rounded-pill px-4" %>
             <% end %>
           </div>

<% if user_signed_in? %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
          <li class="nav-item dropdown">
            <div data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <img class="avatar dropdown-toggle" id="navbarDropdown"/>
            <i class="fa-solid fa-circle-user"></i>
            </div>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="#"><%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete} %></a>
            </div>
          </li>
      </ul>
    </div>
<%else %>
 <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
          <li class="nav-item dropdown">
            <div data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <img class="avatar dropdown-toggle" id="navbarDropdown"/>
            <i class="fa-solid fa-circle-user"></i>
            </div>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="#"><%= link_to "Log in", new_user_session_path %></a>
            </div>
          </li>
      </ul>
    </div>
<%end %>
 </div>
</div>
